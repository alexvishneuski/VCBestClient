<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_panel_height"
    android:background="@color/colorTopBarBackgroundBlue">

    <TextView
        android:id="@+id/news_top_bar_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/news_top_bar_title"
        android:textColor="@color/colorTopBarWhite"
        android:textScaleX="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />


    <!--TODO what is the best: image button or imageview?-->

    <ImageView
        android:id="@+id/arrow_image_view"
        android:layout_width="@dimen/top_bar_panel_height"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/news_top_bar_title_text_view"
        android:layout_toRightOf="@+id/news_top_bar_title_text_view"
        android:background="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_arrow_drop_down_white_24px"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/news_settings_image_button"
        android:layout_width="@dimen/top_bar_panel_height"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_nitification_settings_white_24px"
        tools:ignore="ContentDescription" />
</RelativeLayout>
