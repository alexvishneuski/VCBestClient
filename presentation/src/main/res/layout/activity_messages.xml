<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.alexvishneuski.vkbestclient.presentation.MainActivity">

    <!--Container for top bar Fragment-->
    <FrameLayout
        android:id="@+id/top_bar_frame_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true">

        <!--TODO remove this <include>-->
       <!-- <include layout="@layout/fragment_top_bar_messages" />-->

    </FrameLayout>

    <!--content-->
    <RelativeLayout
        android:id="@+id/content_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_bar_frame_container"
        android:layout_below="@+id/top_bar_frame_container">

        <!--content itself
        TODO: to resolve issue: 1. code in this activity 2. include out view or 3. fragment-->
        <FrameLayout
            android:id="@+id/content_frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">


            <!-- TODO fill content-->
            <!-- for example-->
            <include layout="@layout/view_messages" />
        </FrameLayout>

        <!--top shadow-->
        <View
            android:id="@+id/top_shadow_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_top_bar_shadow_dark" />

        <!--bottom shadow-->
        <View
            android:id="@+id/bottom_shadow_view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_navigation_bar_shadow_dark" />

    </RelativeLayout>

    <!--navigation bar
    TODO to resolve issue: is it <include>-section or fragment
    decided: <include>, because takes part in 5 activities(or in 1 common)-->

    <FrameLayout

        android:id="@+id/navigation_bar_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/view_navigation_bar_linear_based" />

    </FrameLayout>

</RelativeLayout>
