<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_bar_panel_height"
    android:background="@color/colorNavigationBarBackgroundLightGrey"
    >

    <ImageView
        android:id="@+id/news_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_news_grey_24dp" />

    <ImageView
        android:id="@+id/search_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_search_grey_24dp" />

    <ImageView
        android:id="@+id/messages_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_msg_blue_24dp" />

    <ImageView
        android:id="@+id/notifications_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_notifications_grey_24dp" />

    <ImageView
        android:id="@+id/menu_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_menu_grey_24dp" />

    <!--news, search+, messages+, notifications, profile-menu-->

</LinearLayout>
