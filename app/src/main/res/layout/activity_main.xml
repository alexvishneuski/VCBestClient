<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.alexvishneuski.vklayouts.MainActivity">

    <FrameLayout
        android:id="@+id/top_bar_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/content_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/top_shadow_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignTop="@id/content_frame_container"
            android:background="@drawable/bg_top_bar_shadow_dark_png" />

        <FrameLayout
            android:id="@+id/content_frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO fill content-->
            <!-- for example-->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="EEE"
                android:textSize="50sp" />
        </FrameLayout>

        <View
            android:id="@+id/bottom_shadow_view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@id/content_frame_container"
            android:background="@drawable/bg_navigation_bar_shadow_dark_png" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/navigation_bar_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>
