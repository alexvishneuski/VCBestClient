<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_bar_panel_height"
    android:background="@color/colorBarBlueBackground">

    <ImageView
        android:id="@+id/news_image_view"
        android:layout_width="@dimen/navigation_bar_panel_height"
        android:layout_height="@dimen/navigation_bar_panel_height"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_news_white_24dp" />

    <ImageView
        android:id="@+id/search_image_view"
        android:layout_width="@dimen/navigation_bar_panel_height"
        android:layout_height="@dimen/navigation_bar_panel_height"
        android:layout_toLeftOf="@+id/messages_image_view"
        android:layout_toRightOf="@+id/news_image_view"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_search_white_24dp" />

    <ImageView
        android:id="@+id/messages_image_view"
        android:layout_width="@dimen/navigation_bar_panel_height"
        android:layout_height="@dimen/navigation_bar_panel_height"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_msg_white_24dp" />

    <ImageView
        android:id="@+id/notifications_image_view"
        android:layout_width="@dimen/navigation_bar_panel_height"
        android:layout_height="@dimen/navigation_bar_panel_height"
        android:layout_toLeftOf="@+id/menu_image_view"
        android:layout_toRightOf="@+id/messages_image_view"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_notifications_white_24dp" />

    <ImageView
        android:id="@+id/menu_image_view"
        android:layout_width="@dimen/navigation_bar_panel_height"
        android:layout_height="@dimen/navigation_bar_panel_height"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/ic_menu_white_24dp" />

    <!--news, search+, messages+, notifications, profile-menu-->

</RelativeLayout>
